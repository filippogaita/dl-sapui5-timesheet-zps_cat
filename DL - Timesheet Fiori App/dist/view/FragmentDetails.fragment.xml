<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.ui.layout.form"
    xmlns:l="sap.ui.layout">
	<ResponsivePopover
        id="detailsPopover"
        title="{i18n>titleDetailsPopover}"
        class="sapUiContentPadding"
        placement="Auto"      
        contentHeight="auto"
        contentWidth="auto">
		<beginButton>
			<Button
                id="btnEditActivity"
                text="{i18n>textBtnEditActivity}"
                tooltip="{i18n>tooltipBtnEditActivity}"
                type="Ghost"
                press="handleEditButton"/>
		</beginButton>
		<endButton>
			<Button
                id="btnDeleteActivity"
                text="{i18n>textBtnDeleteActivity}"
                tooltip="{i18n>tooltipBtnDeleteActivity}"
                type="Emphasized"
                press="handleDeleteAppointment"/>
		</endButton>
		<f:SimpleForm
            editable="false"
            layout="ResponsiveGridLayout"
            singleContainerFullSize="false">
            <l:VerticalLayout width="100%">
                <Label
                    id="labelMoreInfoDetails"
                    text="{i18n>textActivityLabel2}"
                    labelFor="moreInfoText"
                    width="auto"/>
                <Text
                    id="moreInfoText"
                    class="sapUiSmallMarginBottom"
                    text=""
                    width="auto"/>
                <Label
                    id="labelShortTextDetails"
                    text="{i18n>shortTextLabel}"
                    labelFor="shortTextText"
                    width="auto"/>
                <Text
                    id="shortTextText"
                    class="sapUiSmallMarginBottom"
                    text=""
                    width="auto"/>
                <Label
                    id="labelLongTextDetails"
                    text="{i18n>textAdditionalInformationLabel}"
                    labelFor="longTextText"
                    width="auto"/>
                <Text
                    id="longTextText"
                    class="sapUiSmallMarginBottom"
                    text=""
                    width="auto"/>
                <Label
                    id="labelWbsDetails"
                    text="{i18n>textWbsLabel2}"
                    labelFor="wbsText"
                    width="auto"/>
                <Text
                    id="wbsText"
                    class="sapUiSmallMarginBottom"
                    text=""
                    width="auto"/>
                <Label
                    id="labelStartDate"
                    labelFor="startDateText"
                    width="auto"/>
                <Text
                    id="startDateText"
                    class="sapUiSmallMarginBottom"
                    text=""
                    width="auto"/>
                <Label
                    id="lEndDateText"
                    text="{i18n>textToLabel2}"
                    labelFor="endDateText"
                    width="auto"/>
                <Text
                    id="endDateText"
                    class="sapUiSmallMarginBottom"
                    text=""
                    width="auto"/>
                <Label
                    id="lOreLavoro"
                    text="{i18n>textWorkedHoursLabel}"
                    labelFor="oreLavoro" 
                    visible="false"
                    width="auto"/> 
                <Text
                    id="oreLavoro"
                    text=""
                    visible="false"
                    width="auto"/>
            </l:VerticalLayout>
		</f:SimpleForm>
	</ResponsivePopover>
</core:FragmentDefinition>
