<core:FragmentDefinition
    xmlns:l="sap.ui.layout"
    xmlns:core="sap.ui.core"
    xmlns="sap.m">
	<Dialog
        id="createDialog"
        contentHeight="auto"
        contentWidth="auto"
        draggable="true"
        resizable="true">
		<beginButton>
			<Button
                id="btnCreateDialogConfirm"
                text="{i18n>textbtnCreateDialogConfirm}"
                type="Emphasized"
                press="handleDialogSaveButtonCreate"/>
		</beginButton>
		<endButton>
			<Button
                id="btnCreateDialogCancel"
                text="{i18n>textbtnCreateDialogCancel}"
                press="handleDialogCancelButtonCreate"/>
		</endButton>
		<l:VerticalLayout
			class="sapUiContentPadding"
			width="100%">
            <Label
                text="{i18n>textEmployeeLabel}" 
                labelFor="dipName"
                required="true"
                width="100%"/>
            <Input
                id="dipName"
                editable="false"
                required="true"
                width="100%"
                liveChange="onChangeInputValuesCreate"/>
            <Label
                text="{i18n>textActivityLabel}"
                labelFor="actType"
                required="true"
                width="100%"/>
            <Select
                id="actType"
                forceSelection="false"
                width="100%"
                change="handleChangeSelectActivityCreate"
                items="{model: 'mainService', path: '/ActivitySet', templateShareable: true,
                    sorter: [   { path: 'Tasktype' },
                                { path: 'Tasklevel' },
                                { path: 'Tasklevelx' }],
                    filters: [  { path: 'InputUname', operator: 'EQ', value1: 'STEFANLU' }]}">
                <core:Item key="{mainService>Tasklevel}" text="{mainService>Tasklevelx}"/>
            </Select>
            <Label
                id="wbsTypeLabelCreate"
                text="{i18n>textWbsLabel}"
                labelFor="wbsType"
                required="true"
                width="100%"/>
            <Select
                id="wbsType"
                forceSelection="false"
                width="100%"
                change="onChangeInputValuesCreate"
                items="{model: 'mainService', path: '/WbsPrefSet', templateShareable: true,
                    sorter: [   { path: 'Rproj' },
                                { path: 'Pernr' },
                                { path: 'Uname' }],
                    filters: [  { path: 'InputUname', operator: 'EQ', value1: 'STEFANLU' }]}">
                <core:Item key="{mainService>Rproj}" text="{mainService>Post1}"/>
            </Select>
            <Label
                id="lCreateStartDate"
                text="{i18n>textFromLabel}"
                labelFor="createStartDate" 
                required="true"
                width="100%"/>
            <DateTimePicker
                id="createStartDate"
                displayFormat="short"
                required="true"
                width="100%"
                change="onChangeStartEndDateInputValuesCreate"/>
            <Label
                id="lCreateEndDate"
                text="{i18n>textToLabel}"
                labelFor="createEndDate"
                required="true"
                width="100%"/>
            <DateTimePicker
                id="createEndDate"
                displayFormat="short"
                required="true"
                width="100%"
                change="onChangeStartEndDateInputValuesCreate"/>
            <Label
                id="lGiornoDate"
                text="{i18n>textDayLabel}"
                labelFor="createGiornoDate"
                visible="false"
                required="true"
                width="100%"/>
            <DatePicker
                id="createGiornoDate"
                required="true"
                displayFormat="short"
                valueFormat="dd/MM/yyyy"
                visible="false"
                width="100%"
                change="onChangeInputValuesCreate"/>
            <Label
                id="lOreLavorate"
                text="{i18n>textWorkedHoursLabel2}"
                labelFor="oreLavorate"
                visible="false"
                required="true"
                width="100%"/> 
            <Input
                id="oreLavorate"
                editable="true"
                required="true"
                type="Number"
                visible="false"
                width="100%"
                liveChange="onChangeInputValuesCreate"/>
            <Label
                id="lActivityTitle"
                text="{i18n>shortTextLabel2}"
                labelFor="appTitle"
                width="100%"/>
            <Input
                id="appTitle"
                editable="true"
                width="100%"
                liveChange="onChangeInputValuesCreate"/>
            <Label
                id="lActivityText"
                text="{i18n>textAdditionalInformation}"
                labelFor="moreInfo"
                width="100%"/>
            <TextArea
                id="moreInfo"
                height="auto"
                rows="3"
                editable="true"
                width="100%"
                liveChange="onChangeInputValuesCreate"/>
		</l:VerticalLayout>
	</Dialog>
</core:FragmentDefinition>
